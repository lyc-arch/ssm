<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC

        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"

        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>


    <constant name="struts.devMode" value="false"/>

    <constant name="struts.objectFactory" value="spring" />

    <package name="user" namespace="/" extends="struts-default,json-default">

        <action name="user_*" class="userAction" method="{1}">
        <!--<action name="user_login" class="userAction" method="login"/>-->
            <result name="loginsuccess">/index.jsp</result>
            <result name="error">/error.jsp</result>
            <result name="addsuccess">/homePage.jsp</result>

            <result name="findsuccess">/userMessage.jsp</result>
            <result name="list">/selectUser.jsp</result>
            <result name="deletesuccess" type="redirect">user_list.action</result>


            <result name="usersuccess">/update.jsp</result>
            <result name="selectsuccess">/select.jsp</result>
            <result name="makesuccess">/userMessage.jsp</result>
        </action>

        <action name="makeUser" class="userAction" method="update">
            <result type="json"></result>

        </action>
        <action name="updateUser" class="userAction" method="findById">

            <result type="json"></result>
            <param name="root">user</param>
        </action>
    </package>

    <package name = "check"  extends="json-default">

        <action name="check"  class="checkAction" method="execute" >
            <result type="json"></result>
            <param name="root">action</param>
        </action>

        <action name="delete" class="checkAction" method="delete">
            <result type="json"></result>
            <param name="root">result</param>
        </action>



    </package>

</struts>
